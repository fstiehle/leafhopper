{
    "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      //"paths": {
      //  "*": ["node_modules/*"]
      //}
    },
    "ts-node": {
      "files": true
    },
    "files": [
      "src/app.ts"
    ],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}